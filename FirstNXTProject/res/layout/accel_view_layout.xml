<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/accel_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="@dimen/arrow_button_margin"
        android:paddingTop="@dimen/arrow_button_margin" >

        <Button
            android:id="@+id/lft_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/arrow_left_image_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fwd_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_up_image_selector" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/control_label_margin"
                android:text="@string/drive_arrow_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bwd_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_down_image_selector" />
        </LinearLayout>

        <Button
            android:id="@+id/rgt_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/arrow_right_image_selector" />
    </LinearLayout>

</LinearLayout>
